{
  "manifest_version": 3,
  "name": "SiteBlocker Extension",
  "version": "2.0.0",
  "version_name": "2.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Site Blocker",
    "default_icon": {
      "16": "badge.png",
      "32": "badge.png",
      "48": "badge.png",
      "128": "badge.png"
    }
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "adBlocker",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "declarativeNetRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "badge.png",
    "48": "badge.png",
    "128": "badge.png"
  }
}